    } else {
      imgNode.src = `https://res.cloudinary.com/tamas-demo/image/upload/e_replace_color:${changeTo}:30:783A27,f_auto,q_auto,w_600/cwv/iztc4rygfkp3fcintbqe.jpg`;
    }
  };
  colourChange.forEach((cc) => {
    cc.addEventListener('click', colourChangeFn);
  });
